{
  "name": "xny/internal-linking-optimizer",
  "description": "Internal Linking Optimization Tool",
  "type": "project",
  "require": {
    "php": ">=7.4"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "phpunit/php-code-coverage": "^9.2"
  },
  "autoload": {
    "psr-4": {
      "Xny\\InternalLinking\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Xny\\InternalLinking\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "test:cov": "phpunit --coverage-text --coverage-html coverage --coverage-clover clover.xml",
    "test:ci": "phpunit --coverage-text --coverage-clover clover.xml"
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  }
}
